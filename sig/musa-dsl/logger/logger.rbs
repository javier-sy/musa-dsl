# RBS for logger/logger.rb - Logger with sequencer position integration

module Musa
  module Logger
    # Custom logger that displays sequencer position with log messages.
    # Inherits from Ruby stdlib Logger.
    class Logger
      # Creates a new logger with optional sequencer integration.
      #
      # @param sequencer Sequencer whose position will be displayed in log messages.
      # @param position_format Format specification for position display (e.g., 3.3).
      def initialize: (
        ?sequencer: Musa::Sequencer::BaseSequencer?,
        ?position_format: Numeric?
      ) -> void

      # Override level getter to handle encoding compatibility issues.
      def level: () -> Integer

      # Standard Logger methods
      def debug: (?String? message) ?{ () -> String } -> void
      def info: (?String? message) ?{ () -> String } -> void
      def warn: (?String? message) ?{ () -> String } -> void
      def error: (?String? message) ?{ () -> String } -> void
      def fatal: (?String? message) ?{ () -> String } -> void
      def level=: (Integer level) -> Integer
    end
  end
end
