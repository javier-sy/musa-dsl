# Common type aliases for Musa DSL
#
# This file defines shared types used across multiple modules.

module Musa
  # Numeric types for musical values
  type numeric = Integer | Float | Rational

  # Duration types (bars, beats)
  type duration = Rational | numeric

  # Velocity can be numeric or symbolic
  type velocity = Integer | Symbol

  # Pitch can be MIDI number or symbolic
  type pitch = Integer | Symbol

  # Grade (scale degree) can be integer or symbolic for silence
  type grade = Integer | Symbol

  # Position in sequencer timeline
  type position = Rational

  # Generic callback/block types
  type callback = ^(*untyped) -> untyped
  type void_callback = ^(*untyped) -> void

  # State symbols for Serie
  type serie_state = :prototype | :instance | :undefined
end
