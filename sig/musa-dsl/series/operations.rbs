# RBS for series/main-serie-operations.rb - Series transformation operations

module Musa
  module Series
    module Operations
      # Auto-restarts serie when exhausted
      def autorestart: () -> Serie::_SerieProtocol

      # Repeats serie multiple times or conditionally
      def repeat: (?Integer? times, ?condition: Proc?) ?{ () -> bool } -> Serie::_SerieProtocol

      # Limits serie to maximum number of values
      def max_size: (Integer length) -> Serie::_SerieProtocol

      # Skips first N values
      def skip: (Integer length) -> Serie::_SerieProtocol

      # Flattens nested series into single level
      def flatten: () -> Serie::_SerieProtocol

      # Processes values with parameterized block
      def process_with: (**untyped parameters) { (untyped value, **untyped parameters) -> untyped } -> Serie::_SerieProtocol

      # Converts array values to hash with specified keys
      def hashify: (*Symbol keys) -> Serie::_SerieProtocol

      # Rotates serie elements circularly
      def shift: (Integer shift) -> Serie::_SerieProtocol

      # Locks serie preventing further modifications
      def lock: () -> Serie::_SerieProtocol

      # Reverses order of values
      def reverse: () -> Serie::_SerieProtocol

      # Randomizes order of values
      def randomize: (?random: Random?) -> Serie::_SerieProtocol

      # Removes values matching condition
      def remove: (?Proc? block) ?{ (untyped) -> bool } -> Serie::_SerieProtocol

      # Selects values matching condition
      def select: (?Proc? block) ?{ (untyped) -> bool } -> Serie::_SerieProtocol

      # Switches between multiple series based on selector values
      def switch: (*Serie::_SerieProtocol indexed_series, **Serie::_SerieProtocol hash_series) -> Serie::_SerieProtocol

      # Multiplexes values from multiple series based on selector
      def multiplex: (*Serie::_SerieProtocol indexed_series, **Serie::_SerieProtocol hash_series) -> Serie::_SerieProtocol

      # Switches to entirely different series based on selector
      def switch_serie: (*Serie::_SerieProtocol indexed_series, **Serie::_SerieProtocol hash_series) -> Serie::_SerieProtocol

      # Appends series sequentially
      def after: (*Serie::_SerieProtocol series) -> Serie::_SerieProtocol

      # Appends another serie (operator)
      def +: (Serie::_SerieProtocol other) -> Serie::_SerieProtocol

      # Cuts serie into chunks of specified length
      def cut: (Integer length) -> Serie::_SerieProtocol

      # Merges serie of series into single serie
      def merge: () -> Serie::_SerieProtocol

      # Combines multiple series for mapping
      def with: (*Serie::_SerieProtocol with_series, ?on_restart: Proc?, ?isolate_values: bool?, **Serie::_SerieProtocol with_key_series) { (*untyped, **untyped) -> untyped } -> Serie::_SerieProtocol

      # Alias for with
      alias eval with

      # Maps values via transformation block
      def map: (?isolate_values: bool?) { (untyped) -> untyped } -> Serie::_SerieProtocol

      # Evaluates block one step ahead (anticipate)
      def anticipate: () { (untyped current, untyped next_value) -> untyped } -> Serie::_SerieProtocol

      # Delays evaluation to next step (lazy evaluation)
      def lazy: () { (untyped previous) -> untyped } -> Serie::_SerieProtocol
    end
  end
end
